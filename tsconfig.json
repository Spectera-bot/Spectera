{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ESNext",
		"lib": ["ESNext"],
		"outDir": "dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src"]
}
